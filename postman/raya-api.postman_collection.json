          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products/low-stock",
            "description": "Liste des produits en rupture"
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/products/{{productId}}",
            "description": "Supprime un produit du catalogue"
          }
        }
      ]
    }
