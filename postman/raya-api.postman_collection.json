            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products?page=1&limit=20&sortBy=name&sortOrder=ASC",
              "host": ["{{baseUrl}}"],
              "path": ["products"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "sortBy", "value": "name" },
                { "key": "sortOrder", "value": "ASC" },
                { "key": "search", "value": "", "disabled": true },
                { "key": "categoryId", "value": "", "disabled": true },
                { "key": "status", "value": "active", "disabled": true }
              ]
            },
            "description": "Liste tous les produits avec pagination et filtres"
          }
        },
        {
          "name": "Get Product",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/products/{{productId}}",
            "description": "Recupere les details d un produit par son ID"
          }
        },
