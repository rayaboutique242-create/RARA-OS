                  "    pm.collectionVariables.set('productId', jsonData.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro Max 256GB\",\n  \"sku\": \"IPH15PM256\",\n  \"barcode\": \"194253456789\",\n  \"description\": \"Smartphone Apple derniere generation avec puce A17 Pro\",\n  \"purchasePrice\": 750000,\n  \"sellingPrice\": 950000,\n  \"stockQuantity\": 25,\n  \"minStockLevel\": 5,\n  \"categoryId\": \"uuid-category\",\n  \"status\": \"active\"\n}"
            },
            "url": "{{baseUrl}}/products",
            "description": "Ajoute un nouveau produit au catalogue"
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"iPhone 15 Pro Max 256GB - Titanium\",\n  \"sellingPrice\": 1000000,\n  \"description\": \"Edition Titanium naturel\"\n}"
            },
            "url": "{{baseUrl}}/products/{{productId}}",
            "description": "Met a jour un produit existant"
          }
        },
        {
          "name": "Update Stock",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 50\n}"
            },
            "url": "{{baseUrl}}/products/{{productId}}/stock",
            "description": "Definit la quantite absolue du stock"
          }
        },
        {
          "name": "Adjust Stock",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"adjustment\": -5\n}"
            },
            "url": "{{baseUrl}}/products/{{productId}}/stock/adjust",
            "description": "Ajuste le stock (+/-)"
